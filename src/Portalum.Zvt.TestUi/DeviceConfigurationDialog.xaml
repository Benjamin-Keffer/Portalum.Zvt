        <Label Content="IpAddress:" HorizontalAlignment="Left" Margin="39,19,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Language:" HorizontalAlignment="Left" Margin="40,50,0,0" VerticalAlignment="Top" FontSize="16"/>
